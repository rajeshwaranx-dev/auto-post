# ─────────────────────────────────────────────
#  Telegram API Credentials (from my.telegram.org)
# ─────────────────────────────────────────────
API_ID=12345678
API_HASH=your_api_hash_here

# ─────────────────────────────────────────────
#  Bot Tokens (from @BotFather)
# ─────────────────────────────────────────────
AUTO_POSTER_BOT_TOKEN=111111111:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
FILE_STORE_BOT_TOKEN=222222222:BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB

# ─────────────────────────────────────────────
#  Channels
#  SOURCE_CHANNEL  – private channel where you upload files (bot is admin)
#  MAIN_CHANNEL    – public/private channel where formatted posts are sent
# ─────────────────────────────────────────────
SOURCE_CHANNEL=-100123456789
MAIN_CHANNEL=-100987654321

# ─────────────────────────────────────────────
#  FileStoreBot public username (without @)
#  Used to build deep-links: https://t.me/<username>?start=<id>
# ─────────────────────────────────────────────
FILE_STORE_BOT_USERNAME=YourFileStoreBot

# ─────────────────────────────────────────────
#  MongoDB (Motor async driver)
# ─────────────────────────────────────────────
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=telegram_autopost

# ─────────────────────────────────────────────
#  OMDb API key  (https://www.omdbapi.com/apikey.aspx)
# ─────────────────────────────────────────────
OMDB_API_KEY=your_omdb_api_key_here

# ─────────────────────────────────────────────
#  Optional
# ─────────────────────────────────────────────
LOG_LEVEL=INFO
